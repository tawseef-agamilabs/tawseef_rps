        function public_event_registration(json) {
            json = {
                params: JSON.stringify(json),
                action: "caa_register"
            };

            document.getElementsByClassName('loading_overlay')[0].style.display = 'block';

            grecaptcha.ready(function() {
                // do request for recaptcha token
                // response is promise with passed token
                grecaptcha.execute('6Lcw7jYkAAAAAJfAHygNY2qgYMPGspHkD-p-h9zW', {
                    action: json.action
                }).then(function(token) {
                    // add token to form
                    json.captchatoken = token;
                    json.eventno = 1;

                    $.post(`php/ui/public_event/public_event_registration.php`, json, resp => {
                        if (resp.error) {
                            toastr.error(resp.message);
                        } else {
                            toastr.success(resp.message);

                            location.href = "registration_verification.php?phone=" + resp.phone;

                            return;
                            //
                            // //get_personal_info();

                            // $(`#response_modal`).modal("show");

                            // $('#message_container').hide();
                            // $('#payment_container').show();
                            // let data = JSON.parse(json.params);
                            // console.log(`data =>`, data);

                            // $('#registrant_info')
                            //     .html(`
                            //         নাম: <b>${data.name_bn}</b><br/>
                            //         মোবাইল নম্বর: <b>${data.phone}</b><br/>
                            //         নিবন্ধন ফিঃ <b>${EN_NumberTo_BN(resp.total_amount || data.event.amount || 0)} + ১% বিকাশ চার্জ</b>
                            //     `);

                            // $('#registrant_photo').attr('src', data.photo_url);
                            // $(`#pay_now_button`).data("eregno", resp.eregno);
                            // $('#payment_notice').html(resp.message);
                            // $('.pay_next').text('পেমেন্ট পরবর্তীতে করুন').prop('href', 'index.php');
                        }

                        document.getElementsByClassName('loading_overlay')[0].style.display = 'none';
                    }, "json");
                });
            });
        }

        // $(document).on("input", `[name="isrunning"]`, function(e) {
        //     if (this.checked) {
        //         $(this).parents(`.row`).find(`[name="end_year_month"]`).val(``).prop("disabled", true);
        //     } else {
        //         $(this).parents(`.row`).find(`[name="end_year_month"]`).prop("disabled", false);
        //     }
        // });

        $('#pay_now_button').click(function(e) {
            e.preventDefault();
            document.getElementsByClassName('loading_overlay')[0].style.display = 'block';

            $(this).prop("disabled", true);

            const paymentmethod = $(this).data('paymentmethod') || "bkash";
            let eregno = $(this).data("eregno");

            $.ajax({
                url: "php/ui/payment/generate_paymentlink.php",
                dataType: "json",
                type: "POST",
                data: {
                    pgw: paymentmethod,
                    eregno,
                    eventno: 2
                },
                success: (response) => {
                    console.log(response);
                    if (response.error) {
                        toastr.error(response.message);
                        document.getElementsByClassName('loading_overlay')[0].style.display = 'none';
                    } else {
                        document.getElementsByClassName('loading_overlay')[0].style.display = 'none';
                        location.href = response.paymentlink;
                    }

                    setTimeout(() => {
                        $(this).prop('disabled', false);
                    }, 5000);

                },
                error: () => {
                    // console.log(response);
                    toastr.error("Unable to connect to Server. Please try again.");
                    document.getElementsByClassName('loading_overlay')[0].style.display = 'none';

                    setTimeout(() => {
                        $(this).prop('disabled', false);
                    }, 5000);
                }
            });
        });
    </script>

    <script>
        function getPhoneNumber() {
            let phone = $('#event_application_form [name=phone]').val();


            if (phone.length != 11) {
                toastr.warning('১১ সংখ্যার মোবাইল নম্বর সঠিকভাবে দিন');
                return false;
            }

            if (!phone.startsWith("01")) {
                toastr.warning('১১ সংখ্যার মোবাইল নম্বর 01 দিয়ে শুরু হতে হবে সঠিকভাবে দিন');
                return false;
            }

            return phone;
        }

        function setPhoneNumber(phone) {
            if ($(`#event_application_form [name=phone]`).length) {
                $(`#event_application_form [name=phone]`).val(phone);
            }
        }

        $(`[name="phone"]`).on(`input`, function(e) {
            if (this.value.length == 11) {
                // get_personal_info();
                return;
            }
        });

        $('input.oninput_acaduration_next').keyup(function(e) {
            e.preventDefault();

            let inputVal = parseInt($(this).val());
            // console.log(`inputVal =>`, inputVal, $(document).find(this).next('.oninput_acaduration_next'));


            if (inputVal >= 0 && inputVal < 10) {
                // console.log(` document oninput_acaduration_next=>`, $(document).find(this).next('.oninput_acaduration_next'));


                // console.log(`$(document).find(this).next('.oninput_acaduration_next').length =>`, $(document).find(this).next('.oninput_acaduration_next').length);
                // console.log(`$(document).find('.oninput_acaduration_next').nextAll(this)=>`, $(document).find('.oninput_acaduration_next').nextAll(this));

                let check = parseInt($(document).find(this).next('.oninput_acaduration_next').length);

                if (check) {
                    $(document).find(this).next('.oninput_acaduration_next').trigger('focus');
                } else if (check === 0) {

                    let aca_period_from = $(this).closest('div').hasClass('aca_period_from');
                    let aca_period_to = $(this).closest('div').hasClass('aca_period_to');
                    if (aca_period_from) {
                        $($(document).find('.aca_period_to .oninput_acaduration_next')[0]).trigger('focus');
                    } else if (aca_period_to) {
                        // $(this).select();
                        // window.focus();
                        $(this).trigger("focusout");

                    } else {

                    }
                } else {
                    $(this).select();
                }
            } else {
                $(this).val('');
            }
        });

        $('input.oninput_acaduration_next').focus(function() {
            $(this).select();
        });

        $('input.oninput_acaduration_next').click(function(e) {
            $(this).select();
        });
    </script>

    <script>
        $(`#is_alumni_yes_checkbox, #is_alumni_no_checkbox`).on("input", function(e) {
            $(`#is_alumni_yes_checkbox, #is_alumni_no_checkbox`).not(this).prop("checked", false);

            if (this.checked && $(this).attr(`id`) == `is_alumni_yes_checkbox`) {
                // $(`.is_alumni_no_content`).collapse(`hide`);
                // $(`.is_alumni_yes_content`).collapse(`show`);

                $(`.is_alumni_no_content`).hide();
                $(`.is_alumni_yes_content`).show();
            } else if (this.checked && $(this).attr(`id`) == `is_alumni_no_checkbox`) {
                // $(`.is_alumni_yes_content`).collapse(`hide`);
                // $(`.is_alumni_no_content`).collapse(`show`);

                $(`.is_alumni_yes_content`).hide();
                $(`.is_alumni_no_content`).show();
            } else {
                // $(`.is_alumni_yes_content`).collapse(`hide`);
                // $(`.is_alumni_no_content`).collapse(`hide`);

                $(`.is_alumni_yes_content`).hide();
                $(`.is_alumni_no_content`).hide();
            }
        });
    </script>

    <script>
        $(`[name="deg_complete"]`).on(`input`, function(e) {
            $(`[name="credit_transferred"]:checked`).prop(`checked`, false);
            $(`[name="passyear"]`).val(``);

            if (this.value == 1) {
                $(`.credit_transferred_container`).hide();
                $(`.pass_year_container`).show();
            } else if (this.value == 0) {
                $(`.pass_year_container`).hide();
                $(`.credit_transferred_container`).show();
            }
        });
    </script>


