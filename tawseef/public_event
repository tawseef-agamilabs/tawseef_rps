    <!-- My Script for File Upload-->

    <script>
        $(document).ready(function() {

            function is_file_size_valid(files, maxSize = 512000) {
                if (files && files.length && files[0].size <= maxSize) {
                    return true;
                } else {
                    toastr.error(`${files && files.length ? files[0].name : ``} ফাইলটি PDF/JPG/PNG ফরমেটে সর্বোচ্চ ৫০০KB সাইজের মধ্যে হতে হবে।${files && files.length ? ` আপনার ফাইলটি ${(files[0].size / 1024).toFixed(2)}KB।` : ``}`)
                    return false;
                }
            }



            ///  Own card Upload ///
            $(`#event_application_form [name="card_design"]`).change(function(e) {
                console.log(this.files);
                let isValid = is_file_size_valid(this.files);
                if (!isValid) {
                    return;
                }
                // let signaturefilename = $(`#adm_form_page_fourth [name="guardian_signatureurl"]`).val(this.files[0].name);
                (upload_file_in_server(this.files[0], "files/own_card/")).then(
                    response => {
                        console.log("file upload response", response);
                        toastr.success("File is successfully uploaded");
                        // signaturefilename.removeClass(`is-invalid`).addClass(`is-valid`);
                        $(`#event_application_form [name="card_design"]`).data({
                            response
                        });
                    },
                    error => {
                        toastr.error(error);
                        // signaturefilename.removeClass(`is-valid`).addClass(`is-invalid`);
                    }
                );
            });
            ///  First Query Upload ///
            $(`#event_application_form [name="query_1"]`).change(function(e) {
                console.log(this.files);
                let isValid = is_file_size_valid(this.files);
                if (!isValid) {
                    return;
                }
                // let signaturefilename = $(`#adm_form_page_fourth [name="guardian_signatureurl"]`).val(this.files[0].name);
                (upload_file_in_server(this.files[0], "files/query/")).then(
                    response => {
                        console.log("file upload response", response);
                        toastr.success("File is successfully uploaded");
                        // signaturefilename.removeClass(`is-invalid`).addClass(`is-valid`);
                        $(`#event_application_form [name="query_1"]`).data({
                            response
                        });
                    },
                    error => {
                        toastr.error(error);
                        // signaturefilename.removeClass(`is-valid`).addClass(`is-invalid`);
                    }
                );
            });
            ///  Second Query Upload ///
            $(`#event_application_form [name="query_2"]`).change(function(e) {
                console.log(this.files);
                let isValid = is_file_size_valid(this.files);
                if (!isValid) {
                    return;
                }
                // let signaturefilename = $(`#adm_form_page_fourth [name="guardian_signatureurl"]`).val(this.files[0].name);
                (upload_file_in_server(this.files[0], "files/query/")).then(
                    response => {
                        console.log("file upload response", response);
                        toastr.success("File is successfully uploaded");
                        // signaturefilename.removeClass(`is-invalid`).addClass(`is-valid`);
                        $(`#event_application_form [name="query_2"]`).data({
                            response
                        });
                    },
                    error => {
                        toastr.error(error);
                        // signaturefilename.removeClass(`is-valid`).addClass(`is-invalid`);
                    }
                );
            });
            ///  Third Query Upload ///
            $(`#event_application_form [name="query_3"]`).change(function(e) {
                console.log(this.files);
                let isValid = is_file_size_valid(this.files);
                if (!isValid) {
                    return;
                }
                // let signaturefilename = $(`#adm_form_page_fourth [name="guardian_signatureurl"]`).val(this.files[0].name);
                (upload_file_in_server(this.files[0], "files/query/")).then(
                    response => {
                        // console.log("file upload response", response);
                        // signaturefilename.removeClass(`is-invalid`).addClass(`is-valid`);
                        toastr.success("File is successfully uploaded");
                        $(`#event_application_form [name="query_3"]`).data({
                            response
                        });
                    },
                    error => {
                        toastr.error(error);
                        // signaturefilename.removeClass(`is-valid`).addClass(`is-invalid`);
                    }
                );
            });
        })
    </script>

    <!-- My Script for Submit Form -->

    <script>
        $(document).ready(function() {
            $(`#event_application_form`).submit(function(e) {

                e.preventDefault();

                let json = {};
                let sent_json = {};


                //// manage all file input ///

                let own_card_design_url = "";
                let agami_card_design_url = "";

                if ($("#own_card").prop('checked') == false && $("#card_design").prop('checked') == true) {
                    agami_card_design_url = $("#set_image").data("agami_design_url");
                }
                if ($("#own_card").prop('checked') == true && $("#card_design").prop('checked') == true) {
                    own_card_design_url = $(`[name="card_design"]`, this).data("response").fileurl;
                }



                let query = {};
                query.query_1 = $(`[name="query_1"]`, this).data("response").fileurl;
                query.query_2 = $(`[name="query_2"]`, this).data("response").fileurl;
                query.query_3 = $(`[name="query_3"]`, this).data("response").fileurl;

                //////////////////

                /// Manage All Checked Box Input ////////


                ///name

                let reg_name_method = [];
                $.each($("input[name='user_name_method']:checked"), function() {
                    reg_name_method.push($(this).val());
                });

                ///contact_address_method

                let contact_address = [];
                $.each($("input[name='contact_address_method']:checked"), function() {
                    contact_address.push($(this).val());
                });

                ///profession_detail

                let profession_detail = [];
                $.each($("input[name='profession_detail']:checked"), function() {
                    profession_detail.push($(this).val());
                });

                ///education_detail

                let education_detail = [];
                $.each($("input[name='education_detail']:checked"), function() {
                    education_detail.push($(this).val());
                });

                ///identity_detial

                let identity_detial = [];
                $.each($("input[name='identity_detial']:checked"), function() {
                    identity_detial.push($(this).val());
                });

                ///attend_detail

                let attend_detail = [];
                $.each($("input[name='attend_detail']:checked"), function() {
                    attend_detail.push($(this).val());
                });

                ///payment_method

                let payment_method = [];
                $.each($("input[name='payment_method']:checked"), function() {
                    payment_method.push($(this).val());
                });

                ///single_input

                let single_input = [];
                $.each($("input[name='single_input']:checked"), function() {
                    single_input.push($(this).val());
                });




                sent_json.input_name = reg_name_method;
                sent_json.own_card_design_url = own_card_design_url;
                sent_json.agami_card_design_url = agami_card_design_url;
                sent_json.query = query;
                console.log(sent_json);



                let all_inputs = $(`#event_application_form`).find(':input');

                $(all_inputs).each(function(index, elm) {
                    json[$(elm).prop('name')] = $(elm).val();
                });

                console.log(`json =>`, json);

            })
        })
    </script>

    <!-- //////// -->

    <script>
        let headgroupkey = `<?= $headgroupkey ?>`;
        console.log(`headgroupkey =>`, headgroupkey);


        if (headgroupkey == `self`) {
            $(`#is_alumni_yes_checkbox`).prop(`checked`, true);
            $(`#is_alumni_no_checkbox`).prop(`checked`, false);

            $(`.is_alumni_no_content`).hide();
            $(`.is_alumni_yes_content`).show();
        } else if (headgroupkey == `current_std`) {
            $(`#is_alumni_yes_checkbox`).prop(`checked`, false);
            $(`#is_alumni_no_checkbox`).prop(`checked`, true);

            $(`.is_alumni_yes_content`).hide();
            $(`.is_alumni_no_content`).show();
        } else {
            $(`#is_alumni_yes_checkbox`).prop(`checked`, false);
            $(`#is_alumni_no_checkbox`).prop(`checked`, false);

            $(`.is_alumni_yes_content`).hide();
            $(`.is_alumni_no_content`).hide();
        }

        document.getElementsByClassName('loading_overlay')[0].style.display = 'block';
        $(document).ready(function() {
            document.getElementsByClassName('loading_overlay')[0].style.display = 'none';
        });

        // var departments = // json_encode($deptArray);

        // loadDepartments();

        function loadDepartments() {
            let select = $(`[name="deptid"]`).empty().append(new Option(`Select any...`, ``));

            $.each(departments, (index, value) => {
                select.append(new Option(value.depttitle, value.deptid));
            });
        }

        function validateSession(session) {
            if (session.length != 9) {

                toastr.error("Invalid Session");
                return false;
            }
            var sessionArray = session.split('-');
            if (sessionArray.length != 2) {
                toastr.error("Invalid Session");
                return false;
            }

            if (sessionArray[0] < 0 || sessionArray[1] < 0) {
                toastr.error("Invalid Session");
                return false;
            }

            return true;
        }

        $(`[name="batch_prefix"]`).on("input", function(e) {

            let batchRow = $(`[name="batch"]`).closest(`tr`);
            let sessionRow = $(`[name="session"]`).closest(`tr`);

            if ($(this).val() > 4) {
                $(`[name="batch"]`).val(0);
                $(`[name="session"]`).val("");
                batchRow.hide();
                sessionRow.show();
            } else {
                $(`[name="batch"]`).val("");
                $(`[name="session"]`).val("");
                batchRow.show();
                sessionRow.hide();
            }


        });

