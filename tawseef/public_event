        });

        // $(`#event_registration_form [name="phone"]`).on("input", function(e) {
        //     if (this.value.length == 11) {
        //         get_personal_info();
        //     }
        // });

        $(`#check_status_button`).click(() => get_personal_info());

        function get_personal_info() {

            let phone = getPhoneNumber();

            if (!phone) {
                return;
            }
            let json = {
                // phone: $(`#event_registration_form [name="phone"]`).val()
                phone: phone,
                eventno: 1
            };

            document.getElementsByClassName('loading_overlay')[0].style.display = 'block';

            $.post(`php/ui/public_event/get_personal_info.php`, json, resp => {
                if (resp.error) {
                    toastr.error(resp.message);
                } else {
                    location.href = "registration_verification.php?phone=" + resp.data.phone;
                    // show_personal_info(resp.data);
                }
                setTimeout(() => {
                    document.getElementsByClassName('loading_overlay')[0].style.display = 'none';
                }, 100);

            }, "json").fail((response) => {
                document.getElementsByClassName('loading_overlay')[0].style.display = 'none';
                toastr.error(response.responseText);
            });
        }

        function show_personal_info(data) {
            $(`#event_application_form`).trigger("reset");

            $(`#people_photo`).prop("src", data.photo_url);
            $(`#people_photo`).data("photo_url", data.photo_url);

            // let date = data.aca_period_from.split("");

            // $(`#event_registration_form [name="aca_period_from_year_1"]`).val(date[0]);
            // $(`#event_registration_form [name="aca_period_from_year_2"]`).val(date[1]);
            // $(`#event_registration_form [name="aca_period_from_year_3"]`).val(date[2]);
            // $(`#event_registration_form [name="aca_period_from_year_4"]`).val(date[3]);

            // date = data.aca_period_to.split("");

            // $(`#event_registration_form [name="aca_period_to_year_1"]`).val(date[0]);
            // $(`#event_registration_form [name="aca_period_to_year_2"]`).val(date[1]);
            // $(`#event_registration_form [name="aca_period_to_year_3"]`).val(date[2]);
            // $(`#event_registration_form [name="aca_period_to_year_4"]`).val(date[3]);

            $(`#event_registration_form [name="title"]`).val(data.title);
            $(`#event_registration_form [name="name_en"]`).val(data.name_en || ``);
            $(`#event_registration_form [name="name_bn"]`).val(data.name_bn || ``);

            if (data.name_en && data.name_en.length) {
                $(`#event_registration_form [name="name_en"]`).closest("tr").show();
            }

            setPhoneNumber(data.phone);

            $(`#event_registration_form [name="email"]`).val(data.email);
            $(`#event_registration_form [name="blood_group"]`).val(data.blood_group);
            $(`#event_registration_form [name="session"]`).val(data.session);

            $(`#event_registration_form [name="batch_prefix"]:not([value="${data.batch_prefix}"])`).prop("checked", false);
            $(`#event_registration_form [name="batch_prefix"][value="${data.batch_prefix}"]`).prop("checked", true);

            $(`#event_registration_form [name="batch"]`).val(data.batch);

            let spouse = data.event.invitee.filter(a => a.headno == 2).length || 0;
            let child = data.event.invitee.filter(a => a.headno == 3).length || 0;
            let guest = data.event.invitee.filter(a => a.headno == 4).length || 0;

            $(`#event_registration_form [name="spouse"]`).val(spouse);
            $(`#event_registration_form [name="child"]`).val(child);
            $(`#event_registration_form [name="guest"]`).val(guest);
            let total_amount = calculate_amount();

            $(`#event_registration_form [name="department"]`).val(data.department);
            $(`#event_registration_form [name="pr_address"]`).val(data.pr_address);
            $(`#event_registration_form [name="home_address"]`).val(data.home_address);

            $.each(data.education, (index, value) => {
                if (!$(`#enable_deptid_${value.dno}`).prop("checked")) {
                    $(`#enable_deptid_${value.dno}`).prop("checked", true);
                }
                $(`#event_registration_form [name="deptid_${value.dno}"][value="${value.deptid}"]`).prop("checked", true);
            });

            $.each(data.speciality, (index, value) => {
                $(`#event_registration_form [name="special_qualification"][value="${value.specialityno}"]`).prop("checked", true);
            });

            if (data.event && data.event.hasOwnProperty("ispaid")) {
                $(`#event_registration_form [name="name_en"],#event_registration_form [name="department"], #event_registration_form [name="birth_place"], #event_registration_form [name="profession"], #event_registration_form [name="jobtitle"]`).each((index, elem) => {
                    $(elem).val(data[$(elem).attr("name")]).prop("disabled", true);
                });

                $('#pay_now_button').data("eregno", data.event.eregno);

                $(`#response_modal`).modal("show");

                if (data.event.ispaid == 0) {
                    $('#message_container').hide();
                    $('#payment_container').show();

                    $('#registrant_info').html(`
                            Name: <b>${data.name_en}</b><br/>
                            Mobile: <b>${data.phone}</b><br/>
                            Total Fee: <b>${(data.event.amount || 0)}</b>
                        `);

                    $('#registrant_photo').attr('src', data.photo_url);
                    $('#payment_notice').html(data.event.message);
                    $('.pay_next').text('পেমেন্ট পরবর্তীতে করুন').prop('href', 'index.php');
                } else {
                    $('#message_container').show();
                    $('#payment_container').hide();

                    $('#message_notice').html(data.event.message);
                    $(`#invitation_button`).prop("href", data.event.invitation_url);
                    $('.pay_next').text('ডাউনলোড করা হয়েছে').prop('href', 'index.php');
                }
            }
        }

        $(`#event_registration_form [name="spouse"], #event_registration_form [name="child"], #event_registration_form [name="guest"]`).change(function(e) {
            calculate_amount();
        });

        function calculate_amount() {
            let spouse = Number($(`#event_registration_form [name="spouse"]`).val()) || 0;
            let child = Number($(`#event_registration_form [name="child"]`).val()) || 0;
            let guest = Number($(`#event_registration_form [name="guest"]`).val()) || 0;
            let totalPeople = spouse + child + guest + 1;
            let totalAmount = (spouse * 500) + (child * 300) + (guest * 700) + 1000;

            // $(`#total_people`).html(EN_NumberTo_BN(totalPeople.toString().padStart(2, 0)));
            // $(`#total_amount`).html(`৳ ${EN_NumberTo_BN(totalAmount)} /-`);
            $(`#total_people`).html((totalPeople.toString().padStart(2, 0)));
            $(`#total_amount`).html(`৳ ${(totalAmount)} /-`);

            $(`#total_amount_in_word`).html(`TK ` + currencyInWords(totalAmount));

            // if (totalPeople > 1) {
            //     $(`#invitee_row`).show();

            //     $(`#invitee_tbody`).empty();
            // } else {
            //     $(`#invitee_row`).hide();
            // }

            return totalAmount;
        }

        function scrollToElem(elem) {
            let elementPos = $(elem).offset().top || 0;

            $(`body,html`).animate({
                scrollTop: elementPos - 170
            }, elementPos - 170);
        }

        // $(`#setup_invitee_data_modal`).modal("show");

        function upload_invitee_data(invitees) {
            return new Promise(function(resolve, reject) {
                let modal = $(`#setup_invitee_data_modal`);
                modal.modal("show");



                $(`form`, modal).submit(function(e) {
                    e.preventDefault();
                    let json = Object.fromEntries((new FormData(this)).entries());
                    console.log(` JSON =>`, json);

                });

                modal.on("hidden.bs.modal", function(e) {
                    reject();
                });
            });
        }

