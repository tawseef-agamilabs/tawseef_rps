<?php

date_default_timezone_set('Asia/Dhaka');
$startDate = strtotime(date('2023-01-30 15:00:00'));
$endDate = strtotime(date('2023-03-12 23:59:59'));
$nowDate = time();

$admin_reg = false;
if (isset($_GET['admin_reg']) && $_GET['admin_reg'] === "EditorAdmin") {
    $admin_reg = $_GET['admin_reg'];
} else if ($nowDate < $startDate) {
    echo "নিবন্ধন এখনো শুরু হয়নি!";
    exit();
} else if ($nowDate > $endDate) {
    echo "নিবন্ধন সময় শেষ হয়েছে!";
    //" এডমিনের সাথে যোগাযোগ করুন!";
    exit();
} else {
    //
}


