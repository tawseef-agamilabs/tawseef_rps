                    <div class="d-flex my-3">
                        <div style="width: 150px;">Profession *</div>
                        <input name="profession" class="form-control shadow-sm" type="text" placeholder="Type your Profession here..." required>
                    </div>
                    <div class="d-flex my-3">
                        <div style="width: 150px;">পদবী</div>
                        <input name="designation" class="form-control shadow-sm" type="text" placeholder="পদবী" required="">
