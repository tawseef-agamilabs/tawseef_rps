        $(`#educational_info_add_button`).click(function(e) {
            add_educational_info();
        });

        function add_educational_info(data) {
            let templateLiterals = $(`<div class="position-relative border border-dark rounded px-3 py-2 mt-2">
                    <div class="position-absolute" style="top:-10px;right:-10px;">
                        <button class="delete_button btn btn-sm btn-danger rounded-circle custom_shadow p-2 m-1" type="button" title="বাতিল করুন">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                    <div class="d-flex my-3">
                        <div style="width: 100px;">ডিগ্রি</div>
                        <select name="dno" class="form-control shadow-sm" required="">
                            <option value="">বাছাই করুন</option>
                            <option value="1">B.Com</option>
                            <option value="2">BBA</option>
                            <option value="3">M.Com</option>
                            <option value="4">MBA</option>
                            <option value="5">MPhil</option>
                            <option value="6">Ph.D</option>
                        </select>
                    </div>
                </div>`)
                .appendTo(`#educational_info_container`);

            (function($) {
                $(`.delete_button`, templateLiterals).click(function(e) {
                    if (confirm(`Are you sure?`)) {
                        templateLiterals.remove();
                    }
                });
            })(jQuery);
        }

        $(`#professional_info_add_button`).click(function(e) {
            let templateLiterals = $(`<div class="position-relative border border-dark rounded px-3 py-2 mt-2">
                    <div class="position-absolute" style="top:-10px;right:-10px;">
                        <button class="delete_button btn btn-sm btn-danger rounded-circle custom_shadow p-2 m-1" type="button" title="বাতিল করুন">
                            <i class="bi bi-trash"></i>
                        </button>
