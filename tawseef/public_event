    <script>
        //// For Confirmation Card Design ////

        $(".select_btn").click(function(e) {
            let image = $(this).next().attr("src");
            $(".show_own_design").addClass("d-none");
            $(".show_agami_design").removeClass("d-none");
            $("#set_image").attr("src", image);
            $("#own_card").prop('checked', false);
            $("#set_image").data("agami_design_url", image);


        });
        $("#own_card").click(function() {
            if ($("#own_card").prop('checked') == true) {
                $(".show_own_design").removeClass("d-none");
                $(".show_agami_design").addClass("d-none");
            }
            if ($("#own_card").prop('checked') == false) {
                $(".show_own_design").addClass("d-none");
                $(".show_agami_design").addClass("d-none");
            }
        });

        //// For Name Input Type ////


        $("#user_name").click(function(e) {
            if ($("#user_name").prop('checked') == true) {
                $("#user_name_method_bn").removeAttr("disabled");
                $("#user_name_method_en").removeAttr("disabled");
                $("#user_name_method_both").removeAttr("disabled");
            }
            if ($("#user_name").prop('checked') == false) {
                $("#user_name_method_bn").attr("disabled", true);
                $("#user_name_method_en").attr("disabled", true);
                $("#user_name_method_both").attr("disabled", true);
                $("#user_name_method_bn").prop('checked', false);
                $("#user_name_method_en").prop('checked', false);
                $("#user_name_method_both").prop('checked', false);
            }
        });

        //// For Input Contact Address ////


        $("#contact_address").click(function(e) {
            if ($("#contact_address").prop('checked') == true) {
                $("#contact_address_bn").removeAttr("disabled");
                $("#contact_address_en").removeAttr("disabled");
                $("#contact_address_both").removeAttr("disabled");
            }
            if ($("#contact_address").prop('checked') == false) {
                $("#contact_address_bn").attr("disabled", true);
                $("#contact_address_en").attr("disabled", true);
                $("#contact_address_both").attr("disabled", true);
                $("#contact_address_bn").prop('checked', false);
                $("#contact_address_en").prop('checked', false);
                $("#contact_address_both").prop('checked', false);
            }
        });

        //// For Professional Information ////

        $("#profession").click(function(e) {
            if ($("#profession").prop('checked') == true) {
                $("#profession_detail_profession").removeAttr("disabled");
                $("#profession_detail_designation").removeAttr("disabled");
                $("#profession_detail_organization").removeAttr("disabled");
            }
            if ($("#profession").prop('checked') == false) {
                $("#profession_detail_profession").attr("disabled", true);
                $("#profession_detail_designation").attr("disabled", true);
                $("#profession_detail_organization").attr("disabled", true);
                $("#profession_detail_profession").prop('checked', false);
                $("#profession_detail_designation").prop('checked', false);
                $("#profession_detail_organization").prop('checked', false);
            }
        });

        //// For Educational Information ////

        $("#education").click(function(e) {
            if ($("#education").prop('checked') == true) {
                $("#education_jsc").removeAttr("disabled");
                $("#education_ssc").removeAttr("disabled");
                $("#education_hsc").removeAttr("disabled");
                $("#education_hons").removeAttr("disabled");
                $("#education_master").removeAttr("disabled");
            }
            if ($("#education").prop('checked') == false) {
                $("#education_jsc").attr("disabled", true);
                $("#education_ssc").attr("disabled", true);
                $("#education_hsc").attr("disabled", true);
                $("#education_hons").attr("disabled", true);
                $("#education_master").attr("disabled", true);

                $("#education_jsc").prop('checked', false);
                $("#education_ssc").prop('checked', false);
                $("#education_hsc").prop('checked', false);
                $("#education_hons").prop('checked', false);
                $("#education_master").prop('checked', false);

            }
        });

        //// For Identity Information ////

        $("#identity").click(function(e) {
            if ($("#identity").prop('checked') == true) {
                $("#identity_nid").removeAttr("disabled");
                $("#identity_passport").removeAttr("disabled");
                $("#identity_birth").removeAttr("disabled");

            }
            if ($("#identity").prop('checked') == false) {
                $("#identity_nid").attr("disabled", true);
                $("#identity_passport").attr("disabled", true);
                $("#identity_birth").attr("disabled", true);


                $("#identity_nid").prop('checked', false);
                $("#identity_passport").prop('checked', false);
                $("#identity_birth").prop('checked', false);


